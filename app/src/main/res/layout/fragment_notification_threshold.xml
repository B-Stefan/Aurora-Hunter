<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_night_24dp"
    android:orientation="vertical"
    tools:context="de.hs_bremen.aurora_hunter.ui.fragments.NotificationThresholdFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_margin="@dimen/text_content_margin"
        android:layout_gravity="center"
        card_view:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_margin="@dimen/text_content_margin"
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/msg.notification_description"/>
    </android.support.v7.widget.CardView>

    <de.hs_bremen.aurora_hunter.ui.views.PredictionGraphView
        android:id="@+id/view_prediction_graph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginTop="@dimen/text_content_margin">
    </de.hs_bremen.aurora_hunter.ui.views.PredictionGraphView>


</LinearLayout>
