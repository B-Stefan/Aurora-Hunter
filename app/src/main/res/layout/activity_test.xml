<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activities.TestActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aurora Level fÃ¼r Bremen auf 0%!"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchase Notifications"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="startPurchaseNotificationsActivity" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aurora Notifications"
        android:id="@+id/btn_notification"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="startAuroraNotificationActivity" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Aurora Toolbar"
        android:id="@+id/btn_toolbar"
        android:layout_below="@+id/btn_prediction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="startTabsView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aurora Prediction"
        android:id="@+id/btn_prediction"
        android:layout_below="@+id/btn_notification"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="startPredictionActivity" />

</RelativeLayout>
