<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity.purchase.headline"
        android:id="@+id/button_purchase_activity_headline"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity.purchase.info"
        android:textSize="15dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity.purchase.action.buy"
        android:id="@+id/button_purchase_activity_buy"
        android:layout_gravity="center_horizontal"
        android:onClick="buyNotifications"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity.purchase.label.buySuccessfull"
        android:id="@+id/text_purchase_activity_buy_successfull"
        android:layout_gravity="center_horizontal"
        android:textColor="#b30707"
        android:textSize="40dp"
        android:visibility="gone" />

</LinearLayout>